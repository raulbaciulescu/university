<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.PasswordField?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.socnet.controller_fx.LogInController">

    <Text layoutX="254.0" layoutY="60.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Log In" textAlignment="CENTER" AnchorPane.topAnchor="30.0">
        <font>
          <Font size="32.0" />
        </font>
    </Text>

    <TextField fx:id="txtFieldUsername" layoutX="223.0" layoutY="143.0" promptText="Username" AnchorPane.topAnchor="150.0" />

    <PasswordField fx:id="txtFieldPassword" layoutX="223.0" layoutY="187.0" promptText="Password" AnchorPane.topAnchor="190.0" />

    <Button fx:id="btnLogin" layoutX="265.0" layoutY="234.0" mnemonicParsing="false" onMouseClicked="#onLogInContinueClick" text="Continue" AnchorPane.topAnchor="230.0" />

    <Text layoutX="184.0" layoutY="352.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Don't have an account yet?" AnchorPane.bottomAnchor="30.0">
        <font>
          <Font size="14.0" />
        </font>
    </Text>

    <Text fx:id="txtSignUpLink" fill="#2200ff" layoutX="362.0" layoutY="352.0" onMouseClicked="#onSignUpClick" strokeType="OUTSIDE" strokeWidth="0.0" text="Sign Up" textAlignment="CENTER" underline="true" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="362.0">
        <font>
          <Font size="14.0" />
        </font>
    </Text>
   <Text fx:id="txtCredentialsError" fill="RED" layoutX="249.0" layoutY="115.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Wrong creadentials" visible="false" AnchorPane.topAnchor="100.0" />

</AnchorPane>
