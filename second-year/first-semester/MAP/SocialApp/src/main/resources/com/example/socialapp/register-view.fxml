<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.PasswordField?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.socialapp.controller.RegisterController">
    <Text layoutX="244.0" layoutY="96.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Sign Up" AnchorPane.topAnchor="30.0">
        <font>
            <Font size="32.0" />
        </font>
    </Text>

    <TextField fx:id="txtFieldUsername" layoutX="225.0" layoutY="159.0" promptText="Username" AnchorPane.topAnchor="110.0" />

    <TextField fx:id="txtFieldFirstName" layoutX="225.0" layoutY="188.0" promptText="First Name" AnchorPane.topAnchor="150.0" />

    <TextField fx:id="txtFieldLastName" layoutX="225.0" layoutY="226.0" promptText="Last Name" AnchorPane.topAnchor="190.0" />

    <PasswordField fx:id="txtFieldPassword" layoutX="225.0" layoutY="264.0" promptText="Password" AnchorPane.topAnchor="230.0" />

    <PasswordField fx:id="txtFieldConfirmPassword" layoutX="225.0" layoutY="312.0" promptText="Confirm password" AnchorPane.topAnchor="270.0" />

    <Button fx:id="btnRegister" layoutX="268.0" layoutY="311.0" mnemonicParsing="false" onAction="#onBtnRegister" text="Continue" AnchorPane.topAnchor="310.0" />

    <Text layoutX="198.0" layoutY="366.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Already have an account?" AnchorPane.bottomAnchor="30.0">
        <font>
            <Font size="14.0" />
        </font>
    </Text>

    <Text fill="#1900ff" layoutX="364.0" layoutY="365.0" onMouseClicked="#onLoginClicked" strokeType="OUTSIDE" strokeWidth="0.0" text="Log In" textAlignment="CENTER" underline="true" AnchorPane.bottomAnchor="30.0">
        <font>
            <Font size="14.0" />
        </font>
    </Text>
    <Text fx:id="txtError" fill="RED" layoutX="384.0" layoutY="127.0" strokeType="OUTSIDE" strokeWidth="0.0" text="something goes wrong!" visible="false" />
</AnchorPane>
