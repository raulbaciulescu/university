<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.PasswordField?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.socialapp.controller.LoginController">

   <Text layoutX="254.0" layoutY="60.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Login" textAlignment="CENTER" AnchorPane.topAnchor="30.0">
      <font>
         <Font size="32.0" />
      </font>
   </Text>

   <TextField fx:id="txtFieldUsername" layoutX="223.0" layoutY="143.0" promptText="Username" AnchorPane.topAnchor="150.0" />

   <PasswordField fx:id="txtFieldPassword" layoutX="223.0" layoutY="187.0" promptText="Password" AnchorPane.topAnchor="190.0" />

   <Button fx:id="btnLogin" layoutX="265.0" layoutY="234.0" mnemonicParsing="false" onMouseClicked="#onBtnLoginClicked" text="Continue" AnchorPane.topAnchor="230.0" />

   <Text layoutX="184.0" layoutY="352.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Don't have an account yet?" AnchorPane.bottomAnchor="30.0">
      <font>
         <Font size="14.0" />
      </font>
   </Text>

   <Text fx:id="registerText" fill="#2200ff" layoutX="362.0" layoutY="352.0" onMouseClicked="#onBtnRegisterClicked" strokeType="OUTSIDE" strokeWidth="0.0" text="Sign Up" textAlignment="CENTER" underline="true" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="362.0">
      <font>
         <Font size="14.0" />
      </font>
   </Text>
   <Text fx:id="errors" fill="RED" layoutX="249.0" layoutY="115.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Wrong user or password" visible="false" AnchorPane.topAnchor="100.0" />

</AnchorPane>
